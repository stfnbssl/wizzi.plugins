$group
    $params text, options|@@null
    {
        text "${text}"
        br true
        $if options != null
            $ var aoptions = options.split(';')

            $foreach opt in aoptions
                $ var ss = opt.split(':');

                $if ss[0] == 'bold'
                    ${ss[0]} true
                $if ss[0] == 'color'
                    color "${ss[1]}"

        $hook
