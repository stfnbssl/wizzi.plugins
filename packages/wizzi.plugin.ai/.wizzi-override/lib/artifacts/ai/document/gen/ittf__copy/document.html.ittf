html 
    lang en
    head 
        meta 
            charset UTF-8
        meta 
            name viewport
            content width=device-width, initial-scale=1.0
        @title Accordion List
        @style 
            css 
                < body
                    font-family Arial, sans-serif
                    margin 20px
                . accordion
                    background-color #eee
                    color #444
                    cursor pointer
                    padding 18px
                    width 100%
                    border none
                    text-align left
                    outline none
                    font-size 15px
                    transition 0.4s
                . active
                    + .accordion:hover
                    background-color #ccc
                . accordion:after
                    content '\002B'
                    # 
                    color #777
                    font-weight bold
                    float right
                    margin-left 5px
                . active:after
                    content "\2212"
                    # 
                . panel
                    margin-top 5px
                    padding 0 18px
                    display none
                    background-color white
                    overflow hidden
                    margin-bottom 10px
                < pre
                    background-color #f4f4f4
                    padding 10px
                    border-radius 5px
                . name
                    font-size 9px
                . billing-green
                    font-size 12px
                    padding 4px
                    background-color green
                    color yellow
                . billing-red
                    font-size 12px
                    padding 4px
                    background-color red
                    color yellow
                . message-role
                    width 25%
                    font-size 12px
                    font-weight 700
                . message-content
                    width 25%
    body 
        h2 chatGPT API calls
		$foreach call in schema.ai.calls
			button ${call.description}
				class accordion
            . panel
                h3 Prompt
                $foreach message in call.messages
                    . message-role
                        + role: ${message.role}
                    . message-content
                        + content: ${message.content}
                h3 Answer
                $if TODO
                    p Name: ${call.name}
                        class name
				span
                    $if JSON.stringify(call.info).indexOf('cached') > -1
                        class billing-green
                    $else
                        class billing-red
                    + Info billing: ${JSON.stringify(call.info)}
                $if _.isNotEmpty(JSON.stringify(call.usage))
				    p Usage ${JSON.stringify(call.usage)}
                $if _.isNotEmpty(call.finish_reason)
				    p Finish reason ${call.finish_reason}
				+ ${call.responseHTML}
        script 
            module 
                kind es6
                const accordions = document.querySelectorAll('.accordion')
                    # JavaScript to toggle the accordion panels
                _ accordions.forEach
                    => 
                        param accordion
                        _ accordion.addEventListener
                            @ 'click'
                            function 
                                _ this.classList.toggle('active')
                                const panel = this.nextElementSibling
                                if panel.style.display === "block"
                                    set panel.style.display = "none"
                                else 
                                    set panel.style.display = "block"
