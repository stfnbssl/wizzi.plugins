module
    kind es6
    $
        var md = {
            plugin: 'wizzi.plugin.xml',
            name: 'document',
            schema: 'xml',
            rootElement: '',
            checkSchema: true,
            isAsync: true,
        };
    gen( &md )
        $append imports
        $append main
            _ md.xml
                @ model
                @ ctx
                a_cb( )
                    if ctx.artifactGenerationErrors.length > 0
                        r_cb_err( ctx.artifactGenerationErrors )
                    else
                        # generation OK
                        r_cb( ctx )
        async-md( xml )
            _ ctx.w('<xml>')
            _ md.genItems
                @ model.items
                @ ctx
                {
                    @ indent true
                a_cb()
                    _ ctx.w('</xml>')
                    r_cb()
