svg
    view-box 0 0 900 600
    xmlns http://www.w3.org/2000/svg
    defs
        linear-gradient
            id cardGradient
            x1 0%
            y1 0%
            x2 100%
            y2 100%
            stop
                offset 0%
                style stop-color:#ffffff;stop-opacity:1
            stop
                offset 100%
                style stop-color:#f8fafc;stop-opacity:1
        linear-gradient
            id iconGradient
            x1 0%
            y1 0%
            x2 100%
            y2 100%
            stop
                offset 0%
                style stop-color:#1e7a8c;stop-opacity:1
            stop
                offset 100%
                style stop-color:#2a9db0;stop-opacity:1
        filter
            id dropShadow
            x -50%
            y -50%
            width 200%
            height 200%
            fe-drop-shadow
                dx 0
                dy 4
                std-deviation 8
                flood-opacity 0.1
        filter
            id glow
            x -50%
            y -50%
            width 200%
            height 200%
            fe-gaussian-blur
                std-deviation 3
                result coloredBlur
            fe-merge
                fe-merge-node
                    in coloredBlur
                fe-merge-node
                    in SourceGraphic
    rect
        width 900
        height 600
        fill url(#cardGradient)
    g
        stroke #cbd5e1
        stroke-width 2
        fill none
        opacity 0.6
        path
            d M 180 200 L 250 200 L 250 120 L 320 120
            @ stroke-dasharray 5,5
            animate
                @ attribute-name stroke-dashoffset
                values 10;0
                dur 2s
                repeat-count indefinite
        path
            d M 180 200 L 250 200 L 250 300 L 320 300
            @ stroke-dasharray 5,5
            animate
                @ attribute-name stroke-dashoffset
                values 10;0
                dur 2s
                repeat-count indefinite
