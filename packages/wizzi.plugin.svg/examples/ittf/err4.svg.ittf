        rect
            width 160
            height 100
            rx 10
            fill url(#cardGradient)
            stroke #e2e8f0
            stroke-width 1
            filter url(#dropShadow)
            animate
                @ attribute-name opacity
                values 0;1
                dur 0.6s
                fill freeze
        circle
